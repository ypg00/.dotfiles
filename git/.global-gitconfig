[push]
  default = current

[remote]
  pushdefault = origin

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  side-by-side = true
  navigate = true    # use n and N to move between diff sections
  dark = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[includeIf "hasconfig:remote.origin.url:github.com"]
  path = $HOME/.dotfiles/git/.gitconfig-github

[includeIf "hasconfig:remote.origin.url:bitbucket.org"]
  path = $HOME/.dotfiles/git/.gitconfig-bitbucket
